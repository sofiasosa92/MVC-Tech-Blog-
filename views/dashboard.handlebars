            <textarea id="post-text" name="post-text"></textarea>
        </div>
        <button type="button" class="btn btn-secondary btn-md" id="new-post">+ Create New Post</button>
    </form>
</section>

<br>
 <h3>Your Posts:</h3>
{{#if posts.length}}
   
    <ul class="post-list">
        {{#each posts as |post|}}
        <li>
            {{> post-info post}}
            <a href="/dashboard/edit/{{post.id}}" class="edit-link">edit post</a>
        </li>
        {{/each}}
    </ul>
{{/if}}
